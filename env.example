# Server Configuration
NODE_ENV=development
PORT=5000
API_BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/kenyan_payment_api

# DARAJA M-Pesa API Configuration
DARAJA_BASE_URL=https://sandbox.safaricom.co.ke
DARAJA_CONSUMER_KEY=your_consumer_key_here
DARAJA_CONSUMER_SECRET=your_consumer_secret_here
DARAJA_PASSKEY=your_passkey_here
DARAJA_SHORTCODE=174379

# Equity Bank API Configuration
EQUITY_BASE_URL=https://api.equitybankgroup.com
EQUITY_API_KEY=your_equity_api_key_here
EQUITY_MERCHANT_ID=your_merchant_id_here

# Airtel Money API Configuration
AIRTEL_BASE_URL=https://api.airtel.africa
AIRTEL_API_KEY=your_airtel_api_key_here
AIRTEL_MERCHANT_ID=your_merchant_id_here

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
PAYMENT_RATE_LIMIT_MAX_REQUESTS=10

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/

# Webhook Configuration
WEBHOOK_TIMEOUT=30000
WEBHOOK_MAX_RETRIES=3

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
SMTP_FROM=noreply@kenyanpay.com

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# SSL Configuration (for production)
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CERT_PATH=/path/to/ssl/cert.pem 